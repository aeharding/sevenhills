{
  "name": "sevenhills",
  "private": true,
  "dependencies": {
    "handlebars": "^2.0.0-alpha.2",
    "metalsmith": "^1.0.0",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "lsmoura/metalsmith-permalinks",
    "metalsmith-sass": "^1.3.0"
  },
  "scripts": {
    "copy-images": "cp -a img/. docs/img && echo",
    "copy-videos": "cp -a video/. docs/video",
    "build": "metalsmith . && rm -rf docs && mv build docs && npm run create-cname && npm run copy-videos && npm run copy-images",
    "create-cname": "echo 'sevenhillsskydivers.org' > docs/CNAME"
  }
}
